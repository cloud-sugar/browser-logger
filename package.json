    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-jest": "24.3.2",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "ts-jest": "26.5.4",
